<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/param_item_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/green_400"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/param_item_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toLeftOf="@+id/param_item_current_val"
                    android:layout_toStartOf="@+id/param_item_current_val"
                    android:src="@drawable/partly_cloudy"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/param_item_current_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:text="35 C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_large" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/param_item_current_val"
                    android:layout_toRightOf="@+id/param_item_current_val"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/param_item_min_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 C"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/param_item_max_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42 C"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/param_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_500"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Type"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_medium"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>